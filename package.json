{
  "name": "multiblast",
  "version": "1.0.1",
  "private": true,
  "description": "MultiBlast simulation tool",
  "author": "Maurice Mostert",

  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",

    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder"
  },

  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "wait-on": "^7.2.0",
    "vite": "^7.3.1"
  },

  "build": {
    "appId": "com.multiblast.app",
    "productName": "MultiBlast",
    "asar": true,

    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],

    "win": {
      "target": ["nsis"]
    }
  }
}
